<%= render "map.js.erb" %>

<div id="map"></div>

<table class="bordered centered">
  <thead>
    <tr>
        <th>Date</th>
        <th>Time</th>
        <th>City, State</th>
        <th>Magnitude</th>
        <th>Distance from LA (miles)</th>
    </tr>
  </thead>

  <tbody>
    <% @earthquakes.each do |earthquake| %>
      <tr>
        <td><%= Time.parse(earthquake.time).strftime("%I:%M %p") %></td>
        <td><%= Date.parse(earthquake.time).strftime("%b %d, %Y") %></td>
        <td><%= earthquake.city_and_state(earthquake.latitude, earthquake.longitude) %></td>
        <td><%= earthquake.mag %></td>
        <td><%= earthquake.distance_from_los_angeles(earthquake.latitude, earthquake.longitude.abs).round(2) %></td>
      </tr>
    <% end %>
    </tbody>
</table>
